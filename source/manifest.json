{
  "manifest_version": 2,
  "name": "vkFastPhrases",
  "version": "3.0.73",
  "description": "Простой способ отправки заготовленных сообщений",
  "author": "slpakkie",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*"
      ],
      "css": [
        "page/css/main.min.css",
        "page/css/removeAds.min.css"
      ],
      "js": [
        "page/js/debug.min.js",
        "page/js/model.min.js",
        "page/js/view.min.js",
        "page/js/controller.min.js",
        "page/js/main.min.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": {
      "72": "images/icons/72.png"
    },
    "default_title": "vkFastPhrases",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "72": "images/icons/72.png"
  }
}
